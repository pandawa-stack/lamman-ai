{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/*/.next/**",
        "apps/*/dist/**"
      ]
    },
    "lint": {
      "cache": false
    },
    "test": {
      "dependsOn": ["lint"],
      "cache": false
    }
  }
}
