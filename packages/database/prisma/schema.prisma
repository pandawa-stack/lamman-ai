// File: packages/database/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String    // Password ter-hash
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  userId      String
  name        String   // Nama Produk
  
  // --- FITUR PUBLISH ---
  slug        String?  @unique  // URL unik (misal: "gaji-kilat")
  deployUrl   String?           // âœ… Simpan "https://kukkmn...html" di sini
  isPublished Boolean  @default(false)
  // ---------------------

  // State Management
  currentStep Int      @default(0)
  
  // Data JSON (Input Wizard)
  brief       Json?
  design      Json?
  voice       Json?
  layout      Json?
  copy        Json?
  
  // Hasil Akhir
  htmlContent String?  @db.Text // Menyimpan kode HTML panjang
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}